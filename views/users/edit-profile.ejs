<%- include('../layouts/Uheader'); -%>
<!-- Header Section Begin -->
<section style="background-color: #eee;">
    <div class="container py-5">
      <div class="row">
        <div class="col">
          <nav class="bg-light rounded-3 p-3 mb-4">
            <h2>Welcome <%= user.Username %></h2>
          </nav>
        </div>
      </div>
      <section class="checkout mb-4 mt-4">
        <div class="container">
            <div class="checkout__form">
                <form action="/edit-profile" method="post" id="editProfileForm">
                    <div class="row" style="justify-content: center;">
                            <div class="col-lg-8 col-md-5 p-4" >
                                <div class="row">
                                    <h3 class="fw-bold mb-3 ">EDIT PROFILE</h3>
                                  <div class="checkout__input" style="width: 75%;">
                                    <p>Full name (First and Last name)<span>*</span></p>
                                    <input type="text" name="name" id="name" minlength="3" maxlength="50" value="<%= user.Username %>">
                                    <span class="error" id="name-error"></span>
                                  </div>
                                </div>
                                <div class="row">
                                  <div class="checkout__input" style="width: 75%;">
                                    <p>Email<span>*</span></p>
                                    <input type="email" name="email" id="email"  value="<%= user.email %>">
                                    <span class="error" id="email-error"></span>
                                  </div>
                                </div>                                
                                <div class="row">
                                  <div class="checkout__input" style="width: 75%;">
                                        <p>Mobile number<span>*</span></p>
                                        <input type="tel" name="mobilenumber" placeholder="Enter 10 digits Mobile Number" id="mobilenumber"  value="<%= user.phoneNumber %>">
                                        <span class="error" id="mobilenumber-error"></span>
                                  </div>
                                </div>
                                <button type="submit" class="site-btn ">ADD ADDRESS</button>
                            </div>
                        </div>
                    </form>
    
            </div>
        </div>
    </section>

  <% if (user) { %>
    <p style="display: none;" id="nameuser"><%= user.Username %></p>
<% }else{ %>
    <p style="display: none;" id="nameuser"></p>

<% } %>





  <%- include('../layouts/Ufooter'); -%>
