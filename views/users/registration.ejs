<section class="vh-auto bg-dark  bgstyle">
	<div class="container-xl ">
	  <div class="row d-flex justify-content-center align-items-center vh-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div>
          <div class="mt-0 text-center">
            <h1 class="text-center fw-bold mb-5 text-white" id="h1">Sign up</h1>     
            <form action="register" method="post">

              <div class="form-outline mb-3 mt-5">
                <input name="username" type="text"  class="form-control rounded-pill form-control-lg input1"  placeholder="Username" />
              </div>

              <div class="form-outline mb-3">
                <input name="email" type="email"  class="form-control rounded-pill form-control-lg input1" placeholder="Email" />
              </div>

              <div class="form-outline mb-3">
                <input name="phoneNumber" type="tel"  class="form-control rounded-pill form-control-lg input1" placeholder="Mobile"/>
              </div>

              <div class="form-outline mb-3">
                <input name="password" type="password"   class="form-control rounded-pill form-control-lg input1" placeholder="Password" />
              </div>

              <div class="form-outline mb-3">
                <input name="repassword" type="password"  class="form-control rounded-pill form-control-lg input1" placeholder="Repeate Password" />
              </div>

              <div>
                <%if(message!=null || mes!=null){ 
                  %>
                  <small class="text-success"><%= message %></small>
                  <small class="text-danger"><%= mes %></small>
                  <%}%>
              </div>

              <div class="form-outline mb-3 "  >
                <button type="submit" class="form-control form-control-lg  btn rounded-pill submit" id="signup-btn"  >Submit</button>
              </div>

            </form>
          </div>
            <div class="form-outline mb-3">
              <a href="login" type="submit" class="form-control form-control-lg  btn btn-secondary rounded-pill submit" >Already have account?</a>
            </div>
        </div>
      </div>
    </div>
  </div>
</section> 

