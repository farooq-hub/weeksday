<!-- Shopping Cart Section Begin -->
<section class="shopping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shopping__cart__table">
                    <table style="overflow: scroll;">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Date</th>
                                <th scope="col">Status</th>
                                <th scope="col">Total</th>
                                <th scope="col">View</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for( let i = 0; i < orders.length; i++ ) { %>
                            

                            <tr class="w-auto">
                                <td class="cart__price w-auto"><%= orders[i]._id %></td>

                                <td class="cart__price w-auto">
                                    <%= new Date(orders[i].orderDate).toLocaleDateString()%>
                                </td>
                                <td class="quantity__item w-auto">
                                    <% if (orders[i].status === 'Confirmed' || orders[i].status === 'Shipped') { %>
                                        <span class="fas fa-circle text-primary small mr-1"></span> <%= orders[i].status %>
                                    <% } else if (orders[i].status === 'Delivered') { %>
                                        <span class="fas fa-circle text-success small mr-1"></span> <%= orders[i].status %>
                                    <% } else { %>
                                        <span class="fas fa-circle text-danger small mr-1"></span> <%= orders[i].status %>
                                    <% } %>
                                </td>
                                <td class="cart__price w-auto">₹ <%= orders[i].GrandTotal-orders[i].discount %>.00</td>
                                <td class="cart__close "> <a href="/order-details?id=<%= orders[i]._id %>"><i class="fa fa-eye"></i></a></td>
                            </tr>   
                            <% } %>          
                        </tbody>
                    </table>
                </div>
            </div>
