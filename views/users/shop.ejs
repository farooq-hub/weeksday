function filter() {
        const form = document.querySelector('#productFilter');

        // hide the modal

        const formData = new FormData(form);
        fetch('/filter', {
            method: 'POST',
            headers: {
            'Content-Type': 'application/x-www-form-urlencoded'
            },
            body: new URLSearchParams(formData)
        })
        .then(response => response.json())
        .then(data => {
            if(data.success){
                var row = $('#products-row'); 
                $('#products-row').empty();
    
                
                $.each(data.products, function(index, product) {
                    var productCard = $('<div>').addClass('col-lg-4 col-md-6 col-sm-12').html(
                        '<div class="product__item">' +
                        '<div class="product__item__pic" style="background-image: url(\'product_img/' + product.images[0] + '\');">' +
                            '<ul class="product__hover">' +
                            '<li><a onclick="addToWishlist(\'' + product._id + '\')" class="wishlistadd" id="' + product._id + '"><img src="img/icon/heart.png" alt=""></a></li>' +
                            '<li><a href="/product-detail?id=' + product._id + '"><img src="img/icon/search.png" alt=""></a></li>' +
                            '</ul>' +
                        '</div>' +
                        '<div class="product__item__text">' +
                            '<a href="/product-detail?id=' + product._id + '"><h6>' + product.title + '</h6></a>' +
                            '<h5>₹' + product.price + '</h5>' +
                            '<div class="product__color__select">' +
                            '</div>' +
                        '</div>' +
                        '</div>'
                    );
                    row.append(productCard);
                });
            }
        })
        .catch(error => {
            console.error(error);
            // Handle any errors that occur during the request
        });
    }


</script>
